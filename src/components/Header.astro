---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav
    class="mx-auto flex w-full flex-wrap items-center justify-between bg-black px-10 py-4 text-white">
    <!-- Site Title -->
    <div class="text-xl font-bold tracking-wide">
      <a href={import.meta.env.BASE_URL} class="transition hover:text-gray-300"
        ><img
          src={import.meta.env.BASE_URL + "/android-chrome-192x192.png"}
          alt={SITE_TITLE}
          class="ml-2 inline-block h-10 w-10"
        ></img></a>
    </div>

    <!-- Internal Links -->
    <div class="flex items-center space-x-6 text-sm font-medium">
      <HeaderLink href="/blogs-raid/">Home</HeaderLink>
      <HeaderLink href="/blogs-raid/blog">Blogs</HeaderLink>
      <HeaderLink href="/blogs-raid/about">About</HeaderLink>
    </div>

