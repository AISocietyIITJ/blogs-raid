    <style>
      @keyframes float {
        0%,
        100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-20px);
        }
      }
      @keyframes glow {
        0%,
        100% {
          box-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
        }
        50% {
          box-shadow: 0 0 40px rgba(59, 130, 246, 0.8);
        }
      }
      @keyframes slideInLeft {
        from {
          transform: translateX(-100px);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }
      @keyframes slideInRight {
        from {
          transform: translateX(100px);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }
      @keyframes fadeInUp {
        from {
          transform: translateY(50px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }
      @keyframes shimmer {
        0% {
          background-position: -500%;
        }
        100% {
          background-position: 500%;
        }
      }
      .shimmer-text {
        background: linear-gradient(
          90deg,
          #00e0ff,
          #9d00ff,
          #00e0ff
        );
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shimmer 3s linear infinite;
      }
      .particle {
        animation: float 6s ease-in-out infinite;
        border-radius: 9999px;
        opacity: 0.1;
        pointer-events: none;
      }
      @keyframes typewriter {
        0% { width: 0 }
        30% { width: 100% }
        60% { width: 100% }
        100% { width: 0 }
      }
      .typewriter-container {
        overflow: hidden;
        white-space: nowrap;
        border-right: 2px solid #00e0ff;
        width: 0;
        animation: typewriter 4s steps(30) infinite;
        font-family: monospace;
        font-size: 1.2rem;
        color: #7dd3fc;
      }

      .button-tilt:hover {
        transform: perspective(600px) rotateX(4deg) rotateY(-4deg) scale(1.05);
        box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
      }
      .transition-3d {
        transition: all 0.3s ease;
      }

      /* Animated Neural Grid Background */
      .neural-grid::before {
        content: "";
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(to right, rgba(255,255,255,0.05) 1px, transparent 1px);
        background-size: 40px 40px;
        animation: scroll-grid 40s linear infinite;
        z-index: 0;
      }
      @keyframes scroll-grid {
        0% { background-position: 0 0; }
        100% { background-position: 1000px 1000px; }
      }

      .animate-float {
        animation: float 6s ease-in-out infinite;
      }
      .animate-glow {
        animation: glow 2s ease-in-out infinite;
      }
      .animate-slide-left {
        animation: slideInLeft 1s ease-out;
      }
      .animate-slide-right {
        animation: slideInRight 1s ease-out;
      }
      .animate-fade-up {
        animation: fadeInUp 1s ease-out;
      }
      .gradient-text {
        background: linear-gradient(90deg, 00e0ff, #9d00ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .neural-bg {
        background-image:
          radial-gradient(
            circle at 20% 80%,
            rgba(120, 119, 198, 0.3) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 80% 20%,
            rgba(255, 119, 198, 0.3) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 40% 40%,
            rgba(120, 219, 255, 0.3) 0%,
            transparent 50%
          );
      }
      .card-hover:hover {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
      }
    </style>
  </head>
