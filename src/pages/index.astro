--- 
import BaseHead from "../components/BaseHead.astro"; 
import Header from "../components/Header.astro"; 
import Footer from "../components/Footer.astro"; 
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts"; 
--- 
<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="RAID | Realm of AI and Data"
      description="The official blog of RAID, IIT Jodhpur's AI & ML society"
    />
    <style>
      @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
      }
      @keyframes glow {
        0%, 100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.5); }
        50% { box-shadow: 0 0 40px rgba(59, 130, 246, 0.8); }
      }
      @keyframes slideInLeft {
        from { transform: translateX(-100px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
      }
      @keyframes slideInRight {
        from { transform: translateX(100px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
      }
      @keyframes fadeInUp {
        from { transform: translateY(50px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }
      @keyframes shimmer {
        0% { background-position: -500%; }
        100% { background-position: 500%; }
      }
      .shimmer-text {
        background: linear-gradient(90deg, #00e0ff, #9d00ff, #00e0ff);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shimmer 3s linear infinite;
      }
      .particle {
        animation: float 6s ease-in-out infinite;
        border-radius: 9999px;
        opacity: 0.1;
        pointer-events: none;
      }
      @keyframes typewriter {
        0% { width: 0 }
        30% { width: 100% }
        60% { width: 100% }
        100% { width: 0 }
      }
      .typewriter-container {
        overflow: hidden;
        white-space: nowrap;
        border-right: 2px solid #47FDFE;
        width: 0;
        animation: typewriter 4s steps(30) infinite;
        font-family: monospace;
        font-size: 1.2rem;
        color: #7dd3fc;
      }
      .button-tilt:hover {
        transform: perspective(600px) rotateX(4deg) rotateY(-4deg) scale(1.05);
        box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
      }
      .transition-3d {
        transition: all 0.3s ease;
      }

      /* Neural Grid Update */
      .neural-grid::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:
          linear-gradient(rgba(71, 253, 254, 0.12) 1px, transparent 1px),
          linear-gradient(to right, rgba(71, 253, 254, 0.12) 1px, transparent 1px);
        background-size: 40px 40px;
        animation: scroll-grid 40s linear infinite;
        z-index: 0;
      }
      @keyframes scroll-grid {
        0% { background-position: 0 0; }
        100% { background-position: 1000px 1000px; }
      }

      .animate-float { animation: float 6s ease-in-out infinite; }
      .animate-glow { animation: glow 2s ease-in-out infinite; }
      .animate-slide-left { animation: slideInLeft 1s ease-out; }
      .animate-slide-right { animation: slideInRight 1s ease-out; }
      .animate-fade-up { animation: fadeInUp 1s ease-out; }

      .gradient-text {
        background: linear-gradient(90deg, 00e0ff, #9d00ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .card-hover:hover {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
      }
    </style>
  </head>
  <body>
    <Header />
    <section class="relative min-h-screen bg-[#040613] text-white overflow-hidden flex items-center justify-center pt-16 neural-grid">

      <!-- âœ… Improved Glowing Circles -->
      <div class="absolute top-[10%] left-[5%] h-72 w-72 bg-[#FEAE51] rounded-full opacity-15 blur-3xl z-0"></div>
      <div class="absolute bottom-[15%] right-[10%] h-80 w-80 bg-[#47FDFE] rounded-full opacity-15 blur-3xl z-0"></div>
      <div class="absolute top-[35%] left-[60%] h-64 w-64 bg-[#9d00ff] rounded-full opacity-10 blur-2xl z-0"></div>

      <!-- Particles -->
      <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
        <div class="particle absolute top-20 left-10 h-3 w-3 blur-md" style="background-color: #FEAE51;"></div>
        <div class="particle absolute top-1/3 right-20 h-2 w-2 blur-md" style="background-color: #FEAE51;"></div>
        <div class="particle absolute bottom-24 left-1/4 h-2 w-2 blur-md" style="background-color: #FE7A45;"></div>
        <div class="particle absolute bottom-10 right-1/3 h-3 w-3 blur-md" style="background-color: #47FDFE;"></div>
      </div>

      <!-- ðŸ§  Hero Content -->
      <div class="relative z-10 flex flex-col items-center justify-center text-center px-4">
        <div class="relative mb-6 animate-float group">
          <div class="absolute inset-0 rounded-full blur-xl bg-blue-500 opacity-10 group-hover:opacity-30 transition duration-300"></div>
          <div class="text-7xl md:text-8xl relative z-10 group-hover:drop-shadow-[0_0_25px_rgba(0,200,255,0.6)] transition duration-300">
            ðŸ¤–
          </div>
        </div>
        <h1 class="text-6xl md:text-8xl font-extrabold shimmer-text animate-fade-up">RAID</h1>
        <p class="mt-4 text-2xl md:text-3xl font-medium text-gray-300 animate-slide-left">
          Realm of AI and Data
        </p>
        <p class="mt-4 max-w-xl text-lg text-gray-400 animate-slide-right">
          The Artificial Intelligence and Machine Learning society of IIT Jodhpur
        </p>
        <div class="mt-4 h-6">
          <div class="typewriter-container inline-block">
            Projects. Research. Innovation. Tutorials. ðŸš€
          </div>
        </div>

        <div class="mt-10 flex flex-col sm:flex-row gap-6 animate-fade-up">
          <a href={import.meta.env.BASE_URL + "/blog"}
            class="px-8 py-3 rounded-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold text-lg transition hover:scale-105 button-tilt transition-3d">
            Explore Blogs ðŸš€
          </a>
          <a href="https://www.linkedin.com/company/raid-iitj"
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-3 rounded-full border-2 border-gray-500 text-gray-300 hover:border-blue-500 hover:text-blue-500 font-semibold text-lg transition hover:scale-105 button-tilt transition-3d">
            Join Our Community
          </a>
        </div>
      </div>
    </section>
    <Footer />
  </body>
</html>
